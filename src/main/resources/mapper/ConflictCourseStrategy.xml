<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rbs.project.mapper.ConflictCourseStrategyMapper">

    <insert id="insertConflictCourseStrategy">
        INSERT INTO conflict_course_strategy(course_1_id, course_2_id)
        VALUES (#{a},#{b})
    </insert>

    <select id="getById1" parameterType="Long" resultType="Long">
        SELECT course_1_id FROM conflict_course_strategy WHERE course_2_id=#{courseId}
    </select>

    <select id="getById2" parameterType="Long" resultType="Long">
        SELECT course_2_id FROM conflict_course_strategy WHERE course_1_id=#{courseId}
    </select>

    <select id="getIdByCourseId" parameterType="Long" resultType="Long">
        SELECT id FROM conflict_course_strategy WHERE course_1_id=#{courseId} OR course_2_id=#{courseId}
    </select>

    <delete id="deleteById" parameterType="Long">
        DELETE FROM conflict_course_strategy WHERE id=#{id}
    </delete>
</mapper>