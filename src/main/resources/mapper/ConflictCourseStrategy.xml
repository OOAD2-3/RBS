<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rbs.project.mapper.ConflictCourseStrategyMapper">
    <select id="findMaxId" resultType="Long">
        SELECT max(id) FROM conflict_course_strategy GROUP BY id;
    </select>

    <insert id="insertOneLine">
        INSERT INTO conflict_course_strategy
        VALUES (#{id},#{courseId})
    </insert>

    <delete id="deleteByCourseId" parameterType="Long">
        DELETE FROM conflict_course_strategy
        WHERE course_id=#{courseId}
    </delete>
</mapper>